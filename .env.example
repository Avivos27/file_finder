# FileFinder Environment Configuration
# Copy this file to .env and adjust values as needed

# Logging Configuration
FILE_FINDER_LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
FILE_FINDER_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
# FILE_FINDER_LOG_FILE=logs/file_finder.log  # Uncomment to enable file logging

# Search Configuration
FILE_FINDER_FOLLOW_SYMLINKS=false
# FILE_FINDER_MAX_DEPTH=10  # Uncomment to set default max depth
# FILE_FINDER_MAX_RESULTS=1000  # Uncomment to set default max results

# Performance Configuration
FILE_FINDER_ENABLE_CACHING=false
FILE_FINDER_CACHE_SIZE=1000
